set guioptions-=T	  "remove toolbar
"set guioptions-=m	  "remove menu bar
set guioptions-=r	  "remove right-hand scroll bar

colorscheme desert

"set guifont=courier_new:h11:b
"set guifont=consolas:h12
set guifont=inconsolata:h12
"set guifont=Droid\ Sans\ Mono:h11
"set guifont=monofur:h11

" http://stackoverflow.com/questions/1646819/how-can-i-map-ctrl-tab-to-something-in-vim
map <C-Tab> gt
map <C-S-Tab> gT

" http://vi.stackexchange.com/a/3326/971
" activate/deactivate full screen with function key <F11>  
map <F11> <Esc>:call libcallnr("gvimfullscreen.dll", "ToggleFullScreen", 0)<CR>

set renderoptions=type:directx,geom:1,taamode:1

" https://www.reddit.com/r/vim/comments/54tbjb/supercharge_vim_with_fzf_and_ripgrep/
set grepprg=rg\ --vimgrep

" https://github.com/onivim/oni/issues/2342#issuecomment-402953008
tnoremap <s-space> <space>
